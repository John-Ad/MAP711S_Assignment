<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".job_related_fragments.JobAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_job_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Job:"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="17sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#888" />

        <TextView
            android:id="@+id/txt_job_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Client:"
            android:textStyle="bold"
            android:textSize="12sp"
             />

        <Spinner
            android:id="@+id/spnr_vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textStyle="bold"
            android:textSize="12sp"
             />

        <EditText
            android:id="@+id/edt_job_name"
            android:layout_width="230dp"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Description:"
             />

        <EditText
            android:id="@+id/edt_job_desc"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="10sp"
            android:maxLines="5"
            android:minLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Completion Date:"
            android:textStyle="bold"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edt_job_completion_date"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ProgressBar
            android:id="@+id/prg_addJobs"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_job_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:text="Save" />

            <Button
                android:id="@+id/btn_job_back"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>